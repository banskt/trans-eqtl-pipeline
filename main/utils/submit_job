#!/bin/bash

function submit_job() {
    local DIR=$1
    local JOBNAME=$2
    local DEPS=$3
    local CWD=`pwd`
    
    cd ${DIR}
    
    echo ${JOBNAME}.bsub
    
    cd ${CWD}
}

function submit_job_later() {

    local DIR=$1
    local JOBNAME=$2
    local DEPS=$3
    local CWD=`pwd`
    
    cd ${DIR}
    
    if [ ! -z ${DEPS} ]; then
        bsub -w "${DEPS}" < ${JOBNAME}.bsub
    else
        bsub < ${JOBNAME}.bsub
    fi
    
    cd ${CWD}
}

